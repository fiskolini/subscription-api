{
    "openapi": "3.0.0",
    "info": {
        "title": "Barkyn Subscription API",
        "contact": {
            "email": "fiskolini@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/customers": {
            "get": {
                "tags": [
                    "customer"
                ],
                "operationId": "getCustomers",
                "responses": {
                    "200": {
                        "description": "List all customers",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#Customer"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/openapi": {
            "get": {
                "tags": [
                    "documentation"
                ],
                "summary": "OpenAPI JSON File that describes the API",
                "responses": {
                    "200": {
                        "description": "OpenAPI Description File"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CustomerSchema": {
                "title": "Customer",
                "description": "A simple user model.",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "readOnly": true,
                        "example": 1
                    },
                    "discount": {
                        "type": "integer",
                        "format": "int64",
                        "readOnly": true,
                        "example": 25
                    },
                    "created_at": {
                        "type": "datetime",
                        "example": "2021-05-17 00:00:00"
                    },
                    "updated_at": {
                        "type": "datetime",
                        "example": "2021-05-17 00:00:00"
                    },
                    "deleted_at": {
                        "type": "datetime",
                        "example": "2021-05-17 00:00:00"
                    }
                },
                "type": "object"
            }
        }
    }
}